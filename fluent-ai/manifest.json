{
  "manifest_version": 3,
  "name": "FluentAI - Dynamic Language Learning",
  "version": "2.0.0",
  "description": "AI-powered language learning with quizzes, flashcards, and Chrome's built-in AI APIs levering youtube content in the languages you want to learn.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "notifications",
    "alarms",
    "contextMenus"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["flashcardDB.js", "content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*.png", "icons/*.svg", "injected.js"],
      "matches": ["https://www.youtube.com/*"]
    }
  ]
}